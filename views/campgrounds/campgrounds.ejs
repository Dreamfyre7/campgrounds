<%- include ('../partials/header') %>

<h4><%=currentuser%></h4>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i>Welcome to WizCamp</h1>
            <p>View our handpicked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large"  href="/campgrounds/new">Add new Campground</a>
            </p>
            <p>
                <form action="/campgrounds" method="get" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="search campgounds" class="form-control">
                        <input type="submit" value="search" class="btn btn-default">
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="category" placeholder="pick a category">
                            <option value="" selected>pick your category</option>
                            <option>Green field</option>
                            <option>Mountains</option>
                            <option>By the Lake or River</option>
                            <option>By the Beach</option>
                            <option>Snowy Place</option>
                            <option>Night views</option>
                            <option>Desert</option>
                            <option>Other</option>
                        </select>
                        <input type="submit" value="search" class="btn btn-default">
                    </div>
                </form>
            </p>  
            <div class="form-group">
                <h5><%=category%></h5>
                <h5><%=result%></h5>
            </div>   
        </div>
    </header>
    <div class="row text-center" style="display:flex ; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src= "<%=campgrounds.image%>" id="css">
                    <div class="caption">
                        <h4 ><%=campgrounds.name%></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%=campgrounds._id%>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>